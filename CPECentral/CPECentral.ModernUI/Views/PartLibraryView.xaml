<UserControl x:Class="CPECentral.ModernUI.Views.PartLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:CPECentral.ModernUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
            <TabControl>
            <TabItem Width="100">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image HorizontalAlignment="Left" Height="20" Width="20" Margin="0,0,10,0" Source="/Resources/Images/SearchImage_32x32.png" ></Image>
                        <TextBlock VerticalAlignment="Center" FontSize="14">Search</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <views:PartSearchView KeyboardNavigation.TabIndex="0" Margin="5"></views:PartSearchView>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
