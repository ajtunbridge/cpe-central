<UserControl x:Class="CPECentral.ModernUI.UserControls.PartViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPECentral.ModernUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="500">
    <Grid Background="LightSlateGray">
            <TextBlock Margin="3" VerticalAlignment="Center" Text="{Binding HeaderText}"/>
    </Grid>
</UserControl>
